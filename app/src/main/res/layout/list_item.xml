<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="@dimen/activity_padding"

    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"

        android:orientation="vertical">

        <TextView
            android:id="@+id/list_name_text_view"
            style="@style/ListItemTextViewsStyle"
            tools:text="Sky Line 8&quot;" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/ListItemTextViewsStyle"
                android:text="@string/quantity_appended_text"/>

            <TextView
                android:id="@+id/list_quantity_text_view"
                style="@style/ListItemTextViewsStyle"
                tools:text="10" />

        </LinearLayout>

        <TextView
            android:id="@+id/list_price_text_view"
            style="@style/ListItemTextViewsStyle"
            tools:text="$499.99" />

    </LinearLayout>

    <Button
        android:id="@+id/sale_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/sale_button_text"/>

</LinearLayout>